{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": false,
		"skipLibCheck": true,
		"paths": {
			"qv-vue": ["../packages/qv-vue"]
		},
		"types": ["../types/index"]
	},
	"include": ["**/*", ".vitepress/**/*"],
	"exclude": ["node_modules"]
}
